{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Django Debug",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver", "0.0.0.0:8000", "--noreload"   
            ],
            "django": true,
            "justMyCode": true,
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
        }
    ]
}
